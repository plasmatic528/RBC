for i,v in pairs(workspace.Models.Field.Grass:GetDescendants()) do
    if v:IsA("Part") then
        v.Color = Color3.fromRGB(118, 143, 132)
    end
end

game.Lighting.TimeOfDay = 11

local cp = game:GetService('ContentProvider')

cp:PreloadAsync({"https://www.roblox.com/asset/?id=11488072236"})

game.Lighting.GlobalShadows = true
game.Lighting.Ambient = Color3.fromRGB(216,213,234)
game.Lighting.FogStart = 85
game.Lighting.FogEnd = 525
game.Lighting.FogColor = Color3.fromRGB(40, 40, 60)
local ColorCorrection = Instance.new("ColorCorrectionEffect")
ColorCorrection.Parent = game.Lighting
ColorCorrection.Saturation = 0.35
ColorCorrection.Contrast = 0.4
workspace.Models.Field.Grass.Normal.Mid.SurfaceGui.ImageLabel.Image = "https://www.roblox.com/asset/?id=11488072236"

game.RunService.Stepped:Connect(function()
    for _,v in pairs(workspace:GetChildren()) do
       if v.Name == "Football" then
           v.Trail.Lifetime = 100
        end
    end
end)

game.RunService.Stepped:Connect(function()
    for _,v in pairs(game.Players:GetPlayers()) do
        for _,v in pairs(v.Character.Uniform:GetDescendants()) do
            if v:IsA("Part") then
               v.Reflectance = 0.4
               v.Material = Enum.Material.Glass
            end
        end
    end
end)
